
@using BogusDemo.Domain.Models
@model IReadOnlyList<PersonRow>

<h1>People</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>City</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.FullName</td>
                <td>@person.Email.ToLower()</td>
                <td>@person.City</td>
                <td>@person.DateOfBirth.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
    </table>
